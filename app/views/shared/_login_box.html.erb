<div class="pin-side-menu-overlay"></div>
<div class="pin-side-menu-wrap" style="height: 100%;">
  <div class="pin-side-menu">
    <div class="pin-side-menu-widget-wrap">
      <div class="pin-login-form-wrapper">
        <h3>Seja Bem Vindo(a)!</h3>
        <p>Entre e comece a fazer neg√≥cios!</p>

        <div class="pin-login-form">
          <%= form_for('user', as: 'user', url: session_path('user')) do |f| %>
            <%= f.email_field :email, placeholder: 'Email', class: "pin-user-input form-control", autofocus: true, placeholder: "contato@seunegocio.com" %>
            <%= f.password_field :password, placeholder: 'Senha', class: "form-control", autocomplete: "off" %>
            <button type="submit">Entrar</button>
          <% end %>
        </div>

        <div class="pin-social-login-opt">
          <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: "pin-social-login-btn pin-facebook-login" %>
        </div>

        <div class="pin-other-options">
          <%= link_to "Cadastre-se", new_registration_path('user') %><br />
          <%= link_to "Esqueceu sua senha?", new_password_path('user') %>
        </div>
      </div>
    </div>
  </div>

  <button class="pin-side-menu-close-button" id="pin-side-menu-close-button">Close Menu</button>
</div>