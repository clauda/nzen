<% title("Lista de Lojas e Prestadores de Serviços em Natal") %>
<% seo [
  { property: 'description', content: 'Serviços automotivos, gerais, terceirizados, elétricos, hidráulicos, gráficos e o que mais você puder encontrar em Natal. Aqui está a lista completa de serviços que você procura.' },
] %>

<div class="row">
  <ol class="pin-breadcrumbs col-sm-12">
    <li><%= link_to "Início", root_path, title: "Página Inicial do Pinou", "data-turbolinks" => "false"  %> <i class="glyphicon glyphicon-menu-right"></i> </li>
    <li><b>Catálogo</b></li>
  </ol>
</div>

<div id="categories">
  <div class="row">

    <div class="col-md-9">
      <div class="col-fluid">
        <% @categories.each do |alpha, categories| %>
          <% cache "categories-#{alpha}" do %>
            <ul class="cat-list">
              <li class="heading"><%= alpha %></li>
              <% categories.each do |record| %>
                <li><%= link_to record.name, category_path(record), title: record.name %></li>
              <% end %>
            </ul>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-md-3" id="sidebar">
      
      <div class="ad no-mt">
        <!-- Pinou_Categories_Index_001 -->
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-9856374304140488"
             data-ad-slot="9062929486"
             data-ad-format="auto"></ins>
        <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
      </div>
    </div>

    <div class="ad">
      <!-- Pinou_Categories_Index_002 -->
