<% if @category
    title("#{@category.name} em #{@district.name}") 
  else
    title(@district.name) 
  end %>
<% seo [
  { property: 'description', content: "Aqui tem #{@category.try(:name) || 'o que você procura'} em #{@district.name}. Encontre lojas e serviços em Natal/RN para facilitar o seu dia a dia." },
] %>

<div class="row">
  <div class="pin-breadcrumbs col-sm-12">
    <h1>
      <%= link_to "Início", root_path, title: "Pinou Home Page", "data-turbolinks" => "false"  %> <i class="glyphicon glyphicon-menu-right"></i>  <%= link_to "Bairros & Distritos", districts_path, title: "Todos os Bairros" %> <i class="glyphicon glyphicon-menu-right"></i>
      <%= link_to @district.name, district_path(@district), title: @district.name %> 
      <%= " <i class='glyphicon glyphicon-menu-right'></i> <b>#{link_to @category.name, category_path(@category)}</b>".html_safe if @category %>
    </h1>
  </div>
</div>

  <div class="row">
    <div class="col-md-9">
  
      <div class="col-fluid">
        <ul>
          <% @services.each do |service| %>
            <li class="business-card">
              <div class="pin-featured-items">
                <%= render partial: 'services/business_card', locals: { service: service } %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>

      <%= paginate @services %>
    </div>
    
    <div class="col-md-3" id="sidebar"></div>
  </div>
