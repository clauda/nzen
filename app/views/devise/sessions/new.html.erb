<div class="container">

  <div id="login">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2>Bem vindo!</h2>
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, placeholder: 'Email', class: "form-control", autofocus: true %>
      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field :password, placeholder: 'Senha', class: "form-control", autocomplete: "off" %>

      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <label for="user_remember_me">
            <%= f.check_box :remember_me %> 
            Lembrar-me 
          </label>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Entrar", class: "btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
  </div>
