<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="pin-side-menu">
      <div class="pin-side-menu-widget-wrap">

        <div class="pin-login-form-wrapper">
          <h3>Seja bem vindo</h3>
          <p>ao maior portal de negócios do Rio Grande do Norte</p>

          <div class="pin-login-form">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <%= f.text_field :name, placeholder: 'Qual o seu nome?', class: "form-control", autofocus: true %>

              <%= f.email_field :email, placeholder: 'Email', class: "form-control", required: true, autocomplete: "off" %>

              <%= f.password_field :password, placeholder: 'Senha', class: "form-control", autocomplete: "off", required: true %>

              <%= f.password_field :password_confirmation, placeholder: 'Confirmação da Senha', class: "form-control", autocomplete: "off" %>

               <p>Ao se cadastrar você estará concordando com os <%= link_to "Termos de Uso", terms_path %> do Pinou.</p>

              <%= f.submit "Quero Participar" %>
            <% end %>
          </div>

          <div class="pin-social-login-opt">
            <%= link_to "Entre com o Facebook", user_facebook_omniauth_authorize_path, class: "pin-social-login-btn pin-facebook-login" %>
          </div>

          <div class="pin-other-options">
            <%= render "devise/shared/links" %>
          </div>
      
        </div>
      </div>

  </div>
</div>
