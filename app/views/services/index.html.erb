<% title("Lojas & Serviços em Natal") %>

<div class="row">
  <div class="col-md-4">
    <%= form_tag '/busca' do %>
      <div class="input-group">
        <input type="text" name="pesquisa" class="form-control" placeholder="Estou procurando por..." value="<%= params[:pesquisa] %>">
        <span class="input-group-btn">
          <button class="btn btn-primary" type="button">Encontrar</button>
        </span>
      </div>
    <% end %>
  </div>
</div>

<div class="row" ng-controller="SearchController">
  <div class="col-md-9">

    <h1>Lojas & Serviços</h1>
    <hr />
    
    <div class="row col-business">
      <ul>
        <% @services.each do |service| %>
          <%= render partial: 'services/business-card', locals: { service: service } %>
        <% end %>
      </ul>
      <% if @services.empty? %>
        <p>Nenhuma loja encontrada. <a href="/anuncie">Cadastre</a> ou tente buscar por outro termo.</p>
      <% end %>
    </div>

    <%= paginate @services %>
  </div>
  
  <div class="col-md-3" id="sidebar">
    <%= render 'services/filters' %>

    <div class="ad">
      <div class="thumbnail">
        anuncio vai aqui
      </div>
    </div>
    <br />
    <%= link_to 'Anuncie', new_service_path, class: 'btn btn-success btn-block' %>
  </div>
</div>

