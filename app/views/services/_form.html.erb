<%= form_for(service, url: { controller: "services", action: "create" }) do |f| %>
  <% if service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.file_field :logo %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :category_id %>
    <%= f.select :category_id, @categories.collect{|c|[c.name,c.id]} %>
  </div>

  <div class="field">
    <%= f.label :district_id %>
    <%= f.select :district_id, @districts.collect{|d|[d.name,d.id]} %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :web %>
    <%= f.text_field :web, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :facebook %>
    <%= f.text_field :facebook, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :instagram %>
    <%= f.text_field :instagram, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :opens %>
    <%= f.time_select :opens, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :closes %>
    <%= f.time_select :closes, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode, class: 'form-control'  %>
  </div>

  <div class="actions">
    <%= f.submit "Salvar", class: 'btn btn-success' %>
  </div>
<% end %>
