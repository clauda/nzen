    <tr>
      <th>Name</th>
      <th>Published</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, [:admin,category] %></td>
        <td><%= category.published ? 'Sim' : 'NÃ£o' %></td>
        <td><%= link_to 'Editar', edit_admin_category_path(category) %></td>
