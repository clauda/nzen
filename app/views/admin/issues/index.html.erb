<p id="notice"><%= notice %></p>

<h1> Issues</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>PIN</th>
      <th>Motivo</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.code %></td>
        <td><%= Issue::REASONS[issue.reason.to_sym] %></td>
        <td><%= Issue::STATUSES[issue.status.to_sym] %></td>
        <td><%= link_to 'Show', admin_issue_path(issue) %></td>
        <td><%= link_to 'Edit', edit_admin_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', admin_issue_path(issue), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_admin_issue_path %>
