<p id="notice"><%= notice %></p>

<h1> Issues</h1>

<table>
  <thead>
    <tr>
      <th>Reason</th>
      <th>Message</th>
      <th>Status</th>
      <th>User</th>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.reason %></td>
        <td><%= issue.message %></td>
        <td><%= issue.status %></td>
        <td><%= issue.name %></td>
        <td><%= issue.email %></td>
        <td><%= link_to 'Show', admin_issue_path(issue) %></td>
        <td><%= link_to 'Edit', edit_admin_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', admin_issue_path(issue), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_admin_issue_path %>
