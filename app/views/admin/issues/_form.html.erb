<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      Chamado
      <span class="pull-right"><%= @issue.created_at %></span>
    </h3>
  </div>
<div class="panel-body">

  <%= form_for([:admin,issue], html: { class: 'form-horizontal form-border' }) do |f| %>
    <% if issue.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

        <ul>
        <% issue.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :reason, 'Motivo', class: 'col-sm-3 control-label'  %>
      <div class="col-sm-6">
        <%= f.select :reason, IssuesHelper::REASONS, {}, { class: 'form-control' } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :service_id, 'Empresa', class: 'col-sm-3 control-label'  %>
      <div class="col-sm-6"><%= f.select :service_id, Service.all.collect{|service|[service.name, service.id]}, {}, { class: 'form-control' } %></div>
    </div>

    <div class="form-group">
      <%= f.label :message, 'Mensagem', class: 'col-sm-3 control-label'  %>
      <div class="col-sm-6"><%= f.text_area :message, class: 'form-control' %></div>
    </div>

    <div class="form-group">
      <%= f.label :status, class: 'col-sm-3 control-label' %>
      <div class="col-sm-6"><%= f.select :status, IssuesHelper::STATUSES, {}, { class: 'form-control' } %></div>
    </div>

    <div class="form-group">
      <%= f.label :name, 'Nome', class: 'col-sm-3 control-label'  %>
      <div class="col-sm-6"><%= f.text_field :name, class: 'form-control' %></div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: 'col-sm-3 control-label'  %>
      <div class="col-sm-6"><%= f.text_field :email, class: 'form-control' %></div>
    </div>

    <div class="form-group">
      <%= f.label :observation, 'Observação', class: 'col-sm-3 control-label'  %>
      <div class="col-sm-6"><%= f.text_area :observation, class: 'form-control' %></div>
    </div>

    <%= f.submit 'Salvar', class: 'btn btn-primary btn-lg pull-right' %>
  <% end %>

</div>