<h1>Lojas & Servi√ßos</h1>
<%= link_to 'Anuncie', new_service_path, class: 'btn btn-success pull-right' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>District</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= link_to service.name, admin_service_path(service) %></td>
        <td><%= service.category.name %></td>
        <td><%= service.district.name %></td>
        <td><%= link_to 'Show', [:admin,service] %></td>
        <td><%= link_to 'Edit', edit_admin_service_path(service) %></td>
        <td><%= link_to 'Destroy', admin_service_path(service), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @services %>

